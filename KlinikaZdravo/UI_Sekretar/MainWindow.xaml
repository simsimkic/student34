<Window x:Class="UI_sekretar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_sekretar"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="200"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center">
            <Button Content="Pacijent" Click="Button_Click_2"
                    Margin="20"/>
            <Button Content="Doktor"
                    Margin="20" Click="Button_Click_3"/>
            <Button Content="Sekretar"
                    Margin="20" Click="Button_Click"/>
            <Button Content="Upravnik"
                    Margin="20" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>
